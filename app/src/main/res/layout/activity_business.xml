<?xml version="1.0" encoding="utf-8"?>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presenter.activity.business.BusinessActivity"
        android:weightSum="1">



        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:background="@drawable/goalbtn"
            android:layout_gravity="center"
            android:id="@+id/button_goal"
            android:layout_weight="0.09" />

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:background="@drawable/notbtn"
        android:layout_gravity="center"
        android:id="@+id/button_notification"
        android:layout_weight="0.09" />


    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:background="@drawable/chartbtn"
        android:layout_gravity="center"
        android:id="@+id/button_chart"
        android:layout_weight="0.09" />




    </LinearLayout>


